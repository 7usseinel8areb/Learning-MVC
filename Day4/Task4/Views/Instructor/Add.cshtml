@{
}

<form action="\Instructor\SaveData" method="post">

    <div>

        <label for="name">Name</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>

    <div>

        <label for="Address">Address</label>
        <input type="text" name="Address" value="@Model.Address" class="form-control" />
    </div>

    <div>

        <label for="Salary">Salary</label>
        <input type="text" name="Salary" value="@Model.Salary" class="form-control" />
    </div>

    <div>

        <label for="Image">Image</label>
        <input type="text" name="Image" value="@Model.Image" class="form-control" />
    </div>

    <div>
        <label for="Department">Department</label>
        <select name="Department_ID" class="form-control">
            @foreach (var item in ViewBag.Departments)
            {
                  <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>

    <div>
        <label for="Course">Course</label>
        <select name="Course_ID" class="form-control">
            @foreach (var item in ViewBag.Courses)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>
      

    <input type="submit" value="Add" class="btn btn-success" />

</form>