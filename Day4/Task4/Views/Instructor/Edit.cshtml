@{
}

<form action="\Instructor\SaveEdit\@Model.ID" method="post">

    <div>
        <label>Name</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control"/>
    </div>

    <div>
        <label>Address</label>
        <input type="text" name="Address" value="@Model.Address" class="form-control"/>
    </div>

    <div>
        <label>Image</label>
        <input type="text" name="Image" value="@Model.Image" class="form-control"/>
    </div>

    <div>
        <label>Salary</label>
        <input type="text" name="Salary" value="@Model.Salary" class="form-control"/>
    </div>

    <div>
        <label>Department</label>
        <select name="Department_Id" class="form-control">
            @foreach(var item in ViewBag.Departments)
            {
                if(item.ID == Model.Department_ID)
                {
                    <option value="@item.ID" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.ID">@item.Name</option>
                }
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Save" class="btn btn-success"/>
    </div>
</form>